{
	"comments": {
		"lineComment": "#"
	},
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
  ],
	"surroundingPairs": [
		["(", ")"],
		["[", "]"],
		["{", "}"],
    ["'", "'"],
    ["\"", "\""],
	],
	"autoClosingPairs": [
		["(", ")"],
		["[", "]"],
		["{", "}"],
		["_method", "_endmethod"],
		["_proc", "_endproc"],
		["_block", "_endblock"],
		["_protect", "_endprotect"],
		["_try", "_endtry"],
		["_catch", "_endcatch"],
		["_lock", "_endlock"],
		["_then", "_endif"],
		["_loop", "_endloop"],
    {"open": "'", "close": "'", "notIn": ["string", "comment"]},
    {"open": "\"", "close": "\"", "notIn": ["string"]},
	]
}